<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.healthcare.home.controller.NurseDashboardController">
    <top>
        <ToolBar>
            <Button fx:id="moveBtn" text="Move Resident" onAction="#onMove"/>
            <Button fx:id="administerBtn" text="Administer" onAction="#onAdminister"/>
            <Region prefWidth="20"/>
            <Button fx:id="logoutBtn" text="Logout" onAction="#onLogout"/>
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="bedTable" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="colBedId" text="Bed ID" prefWidth="150"/>
                <TableColumn fx:id="colResident" text="Resident" prefWidth="300"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
