<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.healthcare.home.controllers.DoctorDashboard">
    <top>
        <ToolBar>
            <Button fx:id="prescribeButton" text="Add Prescription" onAction="#onPrescribe"/>
            <Region prefWidth="420"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#onLogout"/>
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="bedTable" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="columnBed" text="Bed ID" prefWidth="200"/>
                <TableColumn fx:id="columnResident" text="Resident" prefWidth="200"/>
                <TableColumn fx:id="columnPrescription" text="Prescription" prefWidth="200"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
