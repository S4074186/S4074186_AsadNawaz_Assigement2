<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.healthcare.home.controllers.LoginHandler"
            prefWidth="480.0" prefHeight="340.0"
            style="-fx-background-color: #f8f9fc;">

    <children>
        <VBox alignment="CENTER" spacing="20"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              style="-fx-padding: 30;">

            <!-- App Title -->
            <Label text="Resident HealthCare System"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2a4d7f;" />

            <!-- Centered Form Container -->
            <HBox alignment="CENTER">
                <GridPane hgap="10" vgap="15" alignment="CENTER">
                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="username" promptText="Enter username"
                               prefWidth="220"
                               GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <PasswordField fx:id="password" promptText="Enter password"
                                   prefWidth="220"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1" />
                </GridPane>
            </HBox>

            <!-- Login Button -->
            <Button fx:id="loginButton" text="Login"
                    onAction="#processLogin"
                    style="-fx-background-color: #2a4d7f; -fx-text-fill: white; -fx-font-weight: bold;"
                    prefWidth="120" />

            <!-- Footer -->
            <Label text="Â© 2025 RMIT Care Home"
                   style="-fx-text-fill: #777; -fx-font-size: 11px;" />
        </VBox>
    </children>
</AnchorPane>
