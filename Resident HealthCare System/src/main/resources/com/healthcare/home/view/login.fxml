<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.healthcare.home.controller.LoginController"
            prefWidth="480.0" prefHeight="320.0">

    <children>
        <VBox alignment="CENTER" spacing="15" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">

            <!-- App Title -->
            <Label text="Resident HealthCare System"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2a4d7f;" />

            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100" />
                    <ColumnConstraints halignment="LEFT" minWidth="200" />
                </columnConstraints>

                <!-- Username -->
                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="username" promptText="Enter username"
                           GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <!-- Password -->
                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <PasswordField fx:id="password" promptText="Enter password"
                               GridPane.rowIndex="1" GridPane.columnIndex="1" />

            </GridPane>

            <!-- Login Button -->
            <Button fx:id="loginButton" text="Login"
                    onAction="#handleLogin"
                    style="-fx-background-color: #2a4d7f; -fx-text-fill: white; -fx-font-weight: bold;"
                    prefWidth="100" />

            <!-- Footer -->
            <Label text="Â© 2025 RMIT Care Home"
                   style="-fx-text-fill: #777; -fx-font-size: 11px;" />

        </VBox>
    </children>
</AnchorPane>
